<% if params[:success] %>
  <p style="color: green">Paiement réussi ! 🎉</p>
<% elsif params[:canceled] %>
  <p style="color: red">Paiement annulé.</p>
<% end %>

<p style="color: green"><%= notice %></p>

<% content_for :title, "Items" %>

<% content_for :full_bleed do %>
  <%= render "shared/banner" %>
<% end %>

<h1 class="visually-hidden">Items</h1>

<div class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4 mb-0">Notre sélection</h2>
    <% if user_signed_in? %>
      <%= link_to "Nouvel item", new_item_path, class: "btn btn-primary btn-sm" %>
    <% end %>
  </div>

  <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
    <% @items.each do |item| %>
      <div class="col">
        <%= render item %>
      </div>
    <% end %>
  </div>
</div>
