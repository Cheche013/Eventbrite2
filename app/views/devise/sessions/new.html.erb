<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body p-4 p-md-5">
          <header class="mb-4 text-center">
            <h1 class="h3 mb-1">Se connecter</h1>
            <p class="text-secondary mb-0">Accède à ton compte pour créer ou gérer tes événements.</p>
          </header>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-floating mb-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "name@example.com" %>
              <%= f.label :email, "Adresse email" %>
            </div>

            <div class="form-floating mb-3">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Mot de passe" %>
              <%= f.label :password, "Mot de passe" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                  <%= f.check_box :remember_me, class: "form-check-input", id: "rememberMe" %>
                  <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
                </div>
                <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), class: "link-light" %>
              </div>
            <% end %>

            <%= f.submit "Connexion", class: "btn btn-primary w-100" %>

            <p class="text-center text-secondary mt-4 mb-0">
              Pas encore de compte ?
              <%= link_to "Créer un compte", new_registration_path(resource_name), class: "link-light" %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
